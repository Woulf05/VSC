#include <cs50.h>
#include <stdio.h>
// Gerade Zahlen

const int N = 10;
int main(void)
{
    // array[i-1] * 2 = array[i]
    int array[N];
    array[0] = 2;
    printf("%i\n", array[0]);

    for (int i = 1; i < N; i++)
    {
        array[i] = array[i - 1] + 2;
        printf("%i\n", array[i]);
    }
}
